<Window x:Class="Wirestark_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wirestark_app"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		ContentRendered="Window_ContentRendered"
        Title="Wireshark" Height="576" Width="1000">
    <Grid>
        <Image Stretch="Uniform" Source="/Background.png" HorizontalAlignment="Left" Margin="-1,0,0,0" />
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0,0,5,0"/>
        <Button Name="PlayButton" Content="Check for updates" Click="PlayButton_Click" Height="60" FontSize="28" FontWeight="Bold" Foreground="Black"  Margin="0,0,0,15" VerticalAlignment="Bottom" HorizontalAlignment="Center" MinWidth="150" />
        <TextBox x:Name="versiontxtbox" HorizontalAlignment="Left" Margin="783,493,0,0" FontSize="20" FontWeight="Bold" Foreground="Black" Background="Honeydew" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.286,5.268" Height="44"/>
    </Grid>
</Window>
